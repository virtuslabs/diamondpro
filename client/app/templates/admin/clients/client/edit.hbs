<div class="row">
    <div class="col-md-4">
      <div class="panel panel-default library-item">
          <div class="panel-heading">
              <h3 class="panel-title">Edit Client</h3>
          </div>
          <div class="panel-body">
            <div class="form-horizontal">
              <div class="form-group">
                  <label class="col-sm-2 control-label">First Name</label>
                  <div class="col-sm-10">
                    {{input type="text" value=model.first_name class="form-control" placeholder="The first name of the client"}}
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-2 control-label">Last Name</label>
                  <div class="col-sm-10">
                    {{input type="text" value=model.last_name class="form-control" placeholder="The last name of the client"}}
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-2 control-label">Address</label>
                  <div class="col-sm-10">
                    {{input type="text" value=model.last_name class="form-control" placeholder="The address of the client"}}
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-2 control-label">Email</label>
                  <div class="col-sm-10">
                    {{input type="text" value=model.email class="form-control" placeholder="The email of the client"}}
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-2 control-label">Phone</label>
                  <div class="col-sm-10">
                    {{input type="text" value=model.phone_number class="form-control" placeholder="The phone number of the client"}}
                  </div>
              </div>

            </div>
          </div>
          <div class="panel-footer">
            <div class="text-left">
              <button class="btn btn-danger " {{action 'deleteClient' model}}>Delete</button>
            </div>
            <div class="text-right">
              <button class="btn btn-default" {{action 'saveClient' model}}>Save changes</button>
            </div>
          </div>
      </div>
    </div>
</div>

{{outlet}}
